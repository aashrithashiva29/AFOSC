<%- include ("../partials/header") %>

<div class="container">
    <h1>Proceed to pay <%= totalPrice %>Rs...</h1>
    <form action="/checkout" method="POST" blockToDeliver3">
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" required>
          </div>
        </div>
        <fieldset class="form-group">
            <div class="row">
              <legend class="col-form-label col-sm-2 pt-0">Block to deliver</legend>
              <div class="col-sm-10">
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="blockToDeliver" id="north" value="North" checked>
                  <label class="form-check-label" for="north">
                    North Block
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="blockToDeliver" id="south" value="South">
                  <label class="form-check-label" for="south">
                    Soth Block
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="blockToDeliver" id="west" value="West">
                  <label class="form-check-label" for="west">
                    West Block
                  </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="blockToDeliver" id="east" value="East">
                    <label class="form-check-label" for="east">
                      East Block
                    </label>
                  </div>
              </div>
            </div>
          </fieldset>
          <div class="form-row">
            <div class="form-group col-md-6">
                <label for="cardName">Name(as on credit card)</label>
                <input type="text" class="form-control" id="cardName" name="cardName" placeholder="John Duckett" required>
              </div>
              <div class="form-group col-md-6">
                <label for="creditNumber">Credit Card Number</label>
                <input type="number" class="form-control" id="creditNumber" name="cardNumber" placeholder="4242 4242 4242 4242" required>
              </div>

          </div>
        
        <div class="form-row">  
          <div class="form-group col-md-4">
            <label for="cvv">CVV</label>
            <input type="number" class="form-control" id="cvv" name="cvv" placeholder="012" required>
          </div>
          <div class="form-group col-md-4">
            <label for="expireMonth">Expiration Month</label>
            <input type="number" class="form-control" name="expireMonth" id="expireMonth" placeholder="01" required>
          </div>
          <div class="form-group col-md-4">
            <label for="expireYear">Expiration Year</label>
            <input type="number" class="form-control" id="expireYear" name="expireYear" placeholder="2021" required>
          </div>
        </div>
        
        <button type="submit" class="btn btn-primary">Proceed</button>
      </form>

</div>
<script src="https://js.stripe.com/v2/"></script>
<%- include ("../partials/footer") %>
