<%- include ("../partials/header") %>
<div class="container">
	
		<h1 class="my-4" style="text-align:center;">Edit <%= item.name %></h1>
		<div style="width: 40%; margin:40px auto">
			<form action="/items/<%=item._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="item[name]" value="<%= item.name %>">	
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="item[price]" value="<%= item.price %>" min="1" step="1">	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="item[image]" value="<%= item.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="item[typeOfItem]" value="<%= item.typeOfItem %>">
				</div>
				<div class="form-group">
					<textarea class="form-control" type="text" name="item[description]"><%= item.description %></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Update !</button>
				</div>
			</form>
		</div>
		<div style="width: 30%; margin:0 auto">
			<a href="/items">Go Back</a>
		</div>
	
</div>

<%- include ("../partials/footer") %>
