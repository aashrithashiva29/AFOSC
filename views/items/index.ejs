<section id="breakfast">
<div class="container">
	<div>
		<h2 class="text-center">Breakfast</h2>
	</div>
	<hr>
	<div class="row">
		<% items.forEach(function(item){ %>
			<% if(item.typeOfItem.toLowerCase() === "breakfast"){ %>
			<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 mb-4">
				<div class="card-deck anime align-items-center">
					<div class="card shadow" style="width: 18rem; margin-top:10px;">
   						<img src="<%= item.image %>" class="card-img card-img-top" alt="...">
  						<div class="card-body bg-light text-dark text-center">
    						<h5 class="card-title"><%= item.name %></h5>
    						<p class="card-text"><%= item.description %></p>
							<div class="card-text">
								<span class="float-left ">
									<b>Price:</b>
								</span>
								<span class="float-right ">
									<b><%= item.price %>&#8377;</b>
								</span>
							</div><br>
							<a class="btn btn-dark my-3" href="/cart/add-to-cart/<%= item._id %>">Add to cart</a>
							<br>
							<div class="float-right">
								<i class="fas fa-star"></i>
								<i class="fas fa-star"></i>
								<i class="fas fa-star"></i>
								<i class="fas fa-star"></i>
								<i class="far fa-star"></i>
							</div>
							<br>
							<% if(currentUser && currentUser.isAdmin){ %>
							<div>
								<span><a class="float-left abuttn" href="/items/<%=item._id %>/edit">Edit</a></span>
								<span class="float-right"><form action="/items/<%= item._id %>?_method=delete" method="POST">
									<input type="submit" class="buttn" value="Delete">
								</form>
								</span>
							</div>
							<% } %>
						</div>
					</div>
				</div>
			</div>
		<% } %>
	<% }); %>
	</div>
</div>
</section>

